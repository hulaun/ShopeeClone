{
    "include": ["src/**/*.ts"],
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "allowJs": true,
        "rootDir": "src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "exclude": ["node_modules"]
}